<% include ./partials/head %>
<% include ./partials/header %>


<!--- USER INPUT FORM ---->
<form class="ui form" action='/configure' method='post'>
	<h1 class="ui centered header">Please Input Your Contact Information</h1>

	<div class="field">
		<label>Name</label>
		<div class="two fields">
			<div class="field">
				<input type="text" name="myprofile[firstName]" placeholder="First Name">
			</div>
			<div class="field">
				<input type="text" name="myprofile[lastName]" placeholder="Last Name">
			</div>
		</div>
    <div class="field">
        <label>Address</label>
        <div class="fields">
            <div class="twelve wide field">
                <input type="text" name="myprofile[address]" placeholder="Street Address">
            </div>
            <div class="four wide field">
                <input type="text" name="myprofile[address2]" placeholder="Apt #">
            </div>
        </div>
    </div>
    <div class="ui form">
        <div class="inline fields">
        <label>Phone Number</label>
            <div class="field">
                <input type="text" name='myprofile[phoneNumber]' placeholder="(xxx) xxx-xxxx">
            </div>
        </div>
    </div>
    <div class="ui form">
        <div class="inline fields">
        <label>Emergency Phone Number</label>
            <div class="field">
                <input type="text" name='myprofile[emergencyNumber]' placeholder="(xxx) xxx-xxxx">
            </div>
        </div>
    </div>
    <div class='two wide field'>
      <br>
      <input type='submit' class='ui submit button' name='configure' value='Submit'>
    </div>
  </div>
</form>


<script type="text/javascript" src='/js/user.js'></script>

<% include ./partials/foot %>